model Review {
    id        String   @id @default(uuid())
    mealId    String
    userId    String
    rating    Int 
    comment   String   @db.Text
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user User @relation(fields: [userId], references: [id])
    meal Meal @relation(fields: [mealId], references: [id])

    @@index([mealId])
    @@index([userId])
    @@map("reviews")
}
